#include <iostream>
#include <stdlib.h>
#include <time.h>
#include <iomanip>
#include <Windows.h>
#include <fstream>
#include <string>
#include <conio.h>


using namespace std;

class String
{
	char* string;
	int size;
public:
	String(char* nString, int nSize) :
		string{nString}, size{nSize}{}
	String() : String(nullptr, 80){}
	String(int size) 
	{
		string = new char[size + 1];
		strcpy(string, string);
	}
	String(const char* string_)
	{
		string = new char[strlen(string) + 1];
		strcpy(string, string_);
	}
	~String()
	{
		delete[] string;
	}
};
int main()
{
	SetConsoleOutputCP(1251);
	SetConsoleCP(1251);
	srand(time(NULL));
	String string1();
	String string2();

	cout << "Введите первую строку";
	cin >> string1;

	cout << "Введите вторую строку";
	cin >> string2;

	cout << string1 << " + " << string2;
	string1 + string2;
	cout << " = " << string1 << endl;
}
